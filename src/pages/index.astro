---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/molecules/Header.astro";

const projects = [
  {
    name: "Kosmos",
    desc: "Knowledge-focused community aimed to connect people and help them learn and grow.",
    url: "https://kosmos.community",
  },
  {
    name: "Root",
    desc: "Clean and simple start-page for daily use.",
    url: "https://github.com/imreyesjorge/root-startpage",
  },
];
---

<style>
  a:link,
  a:visited {
    color: currentColor;
    text-decoration: none;
  }

  ul {
    list-style: none;
    padding: 0;

    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  ul li {
    color: #aaa;

    margin: 0 20px;

    border-radius: 8px;
    border: 1px solid transparent;

    transition: 0.2s;
  }

  ul li a {
    padding: 1rem;

    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  ul li:hover {
    color: white;

    background-color: rgba(255, 255, 255, 0.025);
    border-color: rgba(255, 255, 255, 0.05);
  }

  h1,
  h2 {
    font-size: 16px;
  }

  h2,
  p {
    margin: 0;
  }

  h1 {
    font-weight: medium;
  }

  p {
    font-size: 14px;
  }
</style>

