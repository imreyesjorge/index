    description="Learning how to be a better person and developer ðŸŒˆ. "
  />
  <main>
    <h1>Projects</h1>
    <ul>
      {
        projects.map((project, index) => (
          <li>
            <a href={project.url}>
              <h2>{project.name}</h2>
              <p>{project.desc}</p>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</MainLayout>
