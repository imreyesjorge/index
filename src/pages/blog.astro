---
import MainLayout from "../layouts/MainLayout.astro";

const rawPosts = await Astro.glob("../pages/posts/*.md");

const tags = [...new Set(rawPosts.map((post) => post.frontmatter.tags).flat())];

const allPosts = rawPosts.sort((a, b) => {
  return (
    // @ts-ignore
    new Date(b.frontmatter.pubDate) -
    // @ts-ignore
    new Date(a.frontmatter.pubDate)
  );
});
---

<style>
  h1 {
    font-size: 16px;

    margin-bottom: 20px;
  }

  a:link,
  a:visited {
    color: currentColor;
    text-decoration: none;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  ul li {
    color: #bbb;

    font-weight: bold;

    transition: 0.2s;
  }

  ul li:hover {
    color: white;
  }

  ul li a span {
    color: #888;

    font-weight: normal;
    font-size: 14px;
  }

  #tags {
    display: flex;
    justify-content: center;
    gap: 15px;
  }

  .tag:link,
  .tag:visited {
    padding: 0.8rem 1.2rem;

    background-color: rgba(255, 255, 255, 0.01);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;

    transition: 0.2s;
    position: relative;
    overflow: hidden;
    outline: none;
  }

  .tag:hover,
  .tag:focus {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .tag:focus {
    border-color: royalblue;
  }

  .tag::before {
    content: "";
    width: 100%;
    height: 50%;
    background-color: rgba(0, 0, 0, 0.3);

    position: absolute;
    top: 50%;
    left: 0;
    z-index: -1;
  }
</style>

<MainLayout title="Reyes – Blog">
  <main>
    <div id="tags">
      {
        tags.map((tag) => (
          <a class="tag" href={`/tags/${tag}`}>
            {tag}
          </a>
        ))
      }
    </div>
    <h1>Latest posts</h1>
    <ul>
      {
        allPosts.map((post) => (
          <li>
            <a href={post.url} class="no_border">
              {post.frontmatter.title}{" "}
              <span>
                –{" "}
                {Intl.DateTimeFormat("en-US", {
                  dateStyle: "medium",
                }).format(new Date(post.frontmatter.pubDate))}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</MainLayout>
