---
import MainLayout from "../layouts/MainLayout.astro";

const rawPosts = await Astro.glob("../pages/posts/*.md");

const tags = [...new Set(rawPosts.map((post) => post.frontmatter.tags).flat())];

const allPosts = rawPosts.sort((a, b) => {
  return (
    // @ts-ignore
    new Date(b.frontmatter.pubDate) -
    // @ts-ignore
    new Date(a.frontmatter.pubDate)
  );
});
---

<style>
  h1,
  h2 {
    font-size: 16px;

    margin-bottom: 20px;
  }

  a:link,
  a:visited {
    color: currentColor;
    text-decoration: none;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  ul li {
    color: #bbb;

    font-weight: bold;

    transition: 0.2s;
  }

  ul li:hover {
    color: white;
  }

  ul li a span {
    color: #888;

    font-weight: normal;
    font-size: 14px;
  }

  #tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 15px;
  }
</style>

<MainLayout title="Reyes – Blog">
  <main>
    <h2>Browse by tags</h2>
    <div id="tags">
      {
        tags.map((tag) => (
          <a class="tag" href={`/tags/${tag}`}>
            {tag}
          </a>
        ))
      }
    </div>
    <h1>Latest posts</h1>
    <ul>
      {
        allPosts.map((post) => (
          <li>
            <a href={post.url} rel="prefetch" class="no_border">
              {post.frontmatter.title}{" "}
              <span>
                –{" "}
                {Intl.DateTimeFormat("en-US", {
                  dateStyle: "medium",
                }).format(new Date(post.frontmatter.pubDate))}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</MainLayout>
