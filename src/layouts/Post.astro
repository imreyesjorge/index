---
import "../styles/md.css";
import MainLayout from "./MainLayout.astro";

const { frontmatter } = Astro.props;
const published_date = new Intl.DateTimeFormat("en-US", {
  dateStyle: "long",
}).format(new Date(frontmatter.pubDate));
---

<style>
  header {
    margin: 2rem 0;

    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  header h1,
  header p {
    margin: 0;
  }

  header h1 {
    text-align: center;
  }

  header p {
    color: rgba(255, 255, 255, 0.8);
  }

  #tags {
    display: flex;
    gap: 15px;
  }

  #tags a:link,
  #tags a:visited {
    color: rgba(255, 255, 255, 0.3);
    font-size: 14px;

    border: none;

    transition: 0.2s;
    cursor: pointer;
  }

  #tags a:hover,
  #tags a:hover {
    color: rgba(255, 255, 255, 0.7);
  }

  main {
    color: #bbb;
    width: 100%;

    line-height: 180%;
  }
</style>

<MainLayout title={frontmatter.title}>
  <header>
    <h1>{frontmatter.title}</h1>
    <p>{published_date}</p>
    <section id="tags" aria-label="tags">
      {frontmatter.tags.map((tag: any) => <a href={`/tags/${tag}`}>#{tag}</a>)}
    </section>
  </header>
  <main><slot /></main>
</MainLayout>
